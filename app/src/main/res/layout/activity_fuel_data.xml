<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activity.FuelDataActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/app_bar_margin_bottom">

        <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/fuel_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:subtitle="@string/activity_fuel_subtitle"/>

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Theme.App.TextInputLayout"
            android:layout_marginVertical="@dimen/text_input_margin_vertical"
            android:layout_marginHorizontal="@dimen/text_input_margin_horizontal">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fuel_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/activity_data_date_hint"
                android:drawableStart="@drawable/calendar_accent"
                android:drawablePadding="@dimen/edit_text_drawable_padding"
                android:cursorVisible="false" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                style="@style/Theme.App.TextInputLayout"
                android:layout_marginVertical="@dimen/text_input_margin_vertical"
                android:layout_marginStart="@dimen/text_input_margin_horizontal"
                android:layout_marginEnd="@dimen/text_input_inline_margin_between_elements"
                android:layout_weight="1">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fuel_mileage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/activity_data_mileage_parameter_hint"
                    android:drawableStart="@drawable/gauge_accent"
                    android:inputType="number"
                    android:drawablePadding="@dimen/edit_text_drawable_padding" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                style="@style/Theme.App.TextInputLayout"
                android:layout_marginVertical="@dimen/text_input_margin_vertical"
                android:layout_marginStart="@dimen/text_input_inline_margin_between_elements"
                android:layout_marginEnd="@dimen/text_input_margin_horizontal"
                android:layout_weight="1">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/activity_fuel_distance_parameter_hint"
                    android:drawableStart="@drawable/distance_accent"
                    android:inputType="numberDecimal"
                    android:drawablePadding="@dimen/edit_text_drawable_padding" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            style="@style/Theme.App.TextInputLayout"
            android:layout_marginVertical="@dimen/text_input_margin_vertical"
            android:layout_marginHorizontal="@dimen/text_input_margin_horizontal">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/litres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/activity_fuel_volume_parameter_hint"
                android:drawableStart="@drawable/gas_station_accent"
                android:inputType="numberDecimal"
                android:drawablePadding="@dimen/edit_text_drawable_padding" />
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>
