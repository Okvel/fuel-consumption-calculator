<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout android:id="@+id/recyclerview_coordinator_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/recycler_view_padding_bottom"
            android:clipToPadding="false"/>


    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/add_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            app:icon="@drawable/plus_white"
            android:text="@string/data_fragment_add_fab"
            style="@style/Theme.App.FloatingActionButton"
            android:layout_margin="@dimen/fab_margin" />

    <TextView
            android:id="@+id/no_data_text"
            android:text="@string/data_fragment_no_records"
            android:layout_gravity="center"
            android:textSize="@dimen/fragment_no_data_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
